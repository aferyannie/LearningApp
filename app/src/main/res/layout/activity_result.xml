<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpurple"
    tools:context="com.example.aferyannie.learningapp.ResultActivity">

    <TextView
        android:id="@+id/accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/accuracy_score"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/com_facebook_messenger_blue"
        android:clickable="false" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:layout_toEndOf="@+id/accuracy"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="@string/next" />

    <TextView
        android:id="@+id/txtNyemangatin"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnNext"
        android:layout_marginBottom="35dp"
        android:layout_toStartOf="@+id/btnNext"
        android:background="@drawable/shape_radius"
        android:padding="20dp"
        android:text="Semangat semangat semangat kerja bagus udah mencapai skor segini :D ditingkatkan lagi ya adik2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="italic" />

</RelativeLayout>
